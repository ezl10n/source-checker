<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>source-checker-parent</artifactId>
        <groupId>com.hpe.g11n.sourcechecker</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>source-checker-standalone</artifactId>
    <packaging>jar</packaging>

    <name>source-checker-standalone</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jacob.debug>false</jacob.debug>
        <console.logging>DEBUG</console.logging>
        <slf4j-log4j12.version>1.7.12</slf4j-log4j12.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.hpe.g11n.sourcechecker</groupId>
            <artifactId>source-checker-cli</artifactId>
            <version>${source.checker.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.g11n.sourcechecker</groupId>
            <artifactId>source-checker-gui</artifactId>
            <version>${source.checker.version}</version>
        </dependency>
        <dependency>
		    <groupId>org.slf4j</groupId>
		    <artifactId>slf4j-log4j12</artifactId>
		    <version>${slf4j-log4j12.version}</version>
		</dependency>
		
    </dependencies>

    <profiles>
        <profile>
            <id>dist</id>
            <build>

                <plugins>
                    <plugin>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>appassembler-maven-plugin</artifactId>
                        <configuration>
                            <configurationSourceDirectory>src/main/config</configurationSourceDirectory>
                            <extraJvmArguments>-Djava.library.path=@BASEDIR@\lib -Dsource.checker.config.basedir=@BASEDIR@\config -Dsource.checker.spellingcheck.dict.basedir=@BASEDIR@\dict -Dcom.jacob.debug=${jacob.debug} -Dconsole.log-level=${console.logging}</extraJvmArguments>
                            <programs>
                                <program>
                                    <id>sourceChecker-cli</id>
                                    <mainClass>com.hpe.g11n.sourcechecker.cli.CommandLineApplication</mainClass>
                                </program>
                                <program>
                                    <id>sourceChecker-Standalone-GUI</id>
                                    <mainClass>
                                        com.hpe.g11n.sourcechecker.gui.Application
                                    </mainClass>
                                    <jvmSettings>
                                        <initialMemorySize>256m</initialMemorySize>
                                        <maxMemorySize>1024m</maxMemorySize>
                                        <systemProperties>

                                        </systemProperties>
                                        <extraArguments>
                                            <extraArgument>-Djava.library.path=@BASEDIR@\lib</extraArgument>
                                            <extraArgument>-Dsource.checker.config.basedir=@BASEDIR@\config</extraArgument>
                                            <extraArgument>-Dsource.checker.spellingcheck.dict.basedir=@BASEDIR@\dict</extraArgument>
                                            <extraArgument>-Dconsole.log-level=${console.logging}</extraArgument>
                                            <extraArgument>-Dcom.jacob.debug=${jacob.debug}</extraArgument>
                                        </extraArguments>
                                    </jvmSettings>
                                </program>
                                <program>
                                    <id>sourceChecker-Standalone-GUI_vm</id>
                                    <mainClass>
                                        com.hpe.g11n.sourcechecker.gui.Application
                                    </mainClass>
                                    <jvmSettings>
                                        <initialMemorySize>256m</initialMemorySize>
                                        <maxMemorySize>1024m</maxMemorySize>
                                        <systemProperties>
                                            <systemProperty>prism.order=sw</systemProperty>
                                            <systemProperty>prism.verbose=true</systemProperty>
                                        </systemProperties>
                                        <extraArguments>
                                            <extraArgument>-Djava.library.path=@BASEDIR@\lib</extraArgument>
                                            <extraArgument>-Dsource.checker.config.basedir=@BASEDIR@\config</extraArgument>
                                            <extraArgument>-Dsource.checker.spellingcheck.dict.basedir=@BASEDIR@\dict</extraArgument>
                                            <extraArgument>-Dconsole.log-level=${console.logging}</extraArgument>
                                            <extraArgument>-Dcom.jacob.debug=${jacob.debug}</extraArgument>
                                        </extraArguments>
                                    </jvmSettings>
                                </program>
                            </programs>
                        </configuration>

                    </plugin>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-config-resources</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${dist.directory}/config</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>../src/main/config</directory>
                                            <includes>
                                                <include>*.conf</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-dict-resources</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${dist.directory}/dict</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>../src/main/dict/</directory>
                                            <includes>
                                                <include>**/**</include>
                                            </includes>
                                            <excludes>
                                                <exclude>**/testDic.1</exclude>
                                            </excludes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-jacob-dll-resources</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <overwrite>true</overwrite>
                                    <outputDirectory>${dist.directory}/lib</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>../src/main/resources/lib</directory>
                                            <includes>
                                                <include>*.dll</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
